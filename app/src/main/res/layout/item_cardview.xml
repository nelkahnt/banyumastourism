<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="6dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="6dp"
    card_view:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/stroke"
        android:elevation="0dp">

        <ImageView
            android:id="@+id/cv_photo"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginBottom="0dp"
            android:scaleType="centerCrop"
            tools:src="@color/colorAccent" />

        <ImageView
            android:id="@+id/btnLoc"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/shape_circle" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="26dp"
            android:src="@drawable/ic_baseline_location_on_24" />

        <TextView
            android:id="@+id/cv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv_photo"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-39dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/didact_gothic"
            android:maxLines="2"
            android:textColor="#FFFFFF"
            android:textSize="23sp"
            android:textStyle="bold"
            tools:text="heroes_name" />

        <LinearLayout
            android:id="@+id/Linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv_photo"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="14dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="21dp"
                    android:src="@drawable/ic_baseline_local_parking_24"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Mobil dan Motor"
                    android:textSize="15dp"
                    android:textColor="#fff"
                    android:fontFamily="@font/didact_gothic"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="21dp"
                    android:src="@drawable/ic_baseline_theaters_24"/>
                <TextView
                    android:id="@+id/cv_harga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=": Mobil dan Motor"
                    android:textSize="15dp"
                    android:textColor="#fff"
                    android:fontFamily="@font/didact_gothic"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/cv_descr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/Linear"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/didact_gothic"
            android:justificationMode="inter_word"
            android:maxLines="15"
            android:text="asas"
            android:textSize="14dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
